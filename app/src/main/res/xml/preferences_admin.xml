<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory
        android:key="@string/pref_key_msgs_settings"
        android:title="@string/pref_messages_cat" >
        <Preference
            android:key="@string/pref_key_msgs_populate"
            android:title="@string/msgs_populate" />
        <Preference
            android:key="@string/pref_key_msgs_delete"
            android:title="@string/msgs_delete" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="@string/pref_key_admin_settings"
        android:title="@string/pref_admin_cat" >
        <SwitchPreference
            android:key="@string/pref_key_admin_mode"
            android:title="@string/pref_admin_mode_on"
            android:summaryOn="@string/pref_admin_mode_summ_on"
            android:summaryOff="@string/pref_admin_mode_summ_off"
            android:defaultValue="false"/>
        <Preference
            android:key="@string/pref_key_admin_mode_timer"
            android:dependency="@string/pref_key_admin_mode"
            android:title="@string/pref_admin_mode_timer_title"
            android:summary="@string/pref_admin_mode_timer_summ"/>
        </PreferenceCategory>
</PreferenceScreen>